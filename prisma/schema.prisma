generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//! REFERENCE FROM AQUA

//? SEGA

model SegaCard {
  id              BigInt             @id      @default(autoincrement())
  extId           BigInt             @unique // AimeId
  luid            String             @unique
  registerTime    DateTime
  accessTime      DateTime

  ChusanUserData  ChusanUserData?

  @@map("sega_card")
}

model SegaGameVersion {
  uuid        String   @id
  romVersion  String
  dataVersion String
  lastTime    DateTime

  @@map("sega_game_version")
}

model ServerPropertyEntry {
  id            BigInt @id
  propertyKey   String @unique
  propertyValue String
}

//? Chusan (Chunithm New & New Plus)

model ChusanGameCharge {
  id            Int      @id @default(autoincrement())
  orderId       Int
  chargeId      Int      @unique
  price         Int
  startDate     DateTime
  endDate       DateTime
  salePrice     Int
  saleStartDate DateTime
  saleEndDate   DateTime

  @@map("chusan_game_charge")
}

model ChusanGameEvent {
  id        Int      @id @default(autoincrement())
  type      String
  startDate DateTime
  endDate   DateTime
  enable    Boolean

  @@map("chusan_game_event")
}

